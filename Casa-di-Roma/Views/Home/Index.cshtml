@model Casa_di_Roma.Models.MenuViewModel
<!--4166, 4254 , 4595 boot,-->
<div class="specials-cap titlepage">
    <h4>
        Whether you are looking to have lunch, to host a rehearsal dinner or an anniversary luncheon, Casa di Roma Restaurant offers a number of possibilities that will surely meet your needs and exceed expectations.<br />
        Our extensive menu and wine list are always crowd-pleasers and will include, but not be limited to, homemade pastas, amazing pizzas. We also offer a variety of meat and vegetarian options plus, of course, our unforgettable desserts.
    </h4>&nbsp;
    <h2 id="menu-title">Featuring</h2>

</div>


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">

            <a href="/home/MainMenu/#Calamari"><img src="~/images/'Calamari'.jpeg" alt="ASP.NET" class="img-responsive" /></a>
            <div class="carousel-caption" role="option">
                @foreach (MenuItem course in Model.Appetizers)
                {
                    <p>
                        <br />@course.Name<br /> @course.Description<br />&nbsp;
                    </p>
                }
            </div>
        </div>

        <div class="item">
            <a href="/home/MainMenu/#Shrimp alfredo"><img src="~/images/'Chicken parmigiana'.jpeg" alt="Visual Studio" class="img-responsive" /></a>
            <div class="carousel-caption" role="option">
                @foreach (MenuItem course in Model.Entrees)
                {
                    <p>
                        <br />@course.Name<br /> @course.Description<br />&nbsp;
                    </p>
                }
            </div>
        </div>
        <div class="item">
            <a href="/home/MainMenu/#Tiramisu"><img src="~/images/'Tiramisu'.jpeg" alt="Microsoft Azure" class="img-responsive" /></a>
            <div class="carousel-caption" role="option">
                @foreach (MenuItem course in Model.Desserts)
                {
                    <p>
                        <br />@course.Name<br /> @course.Description<br />&nbsp;
                    </p>
                }
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

